.row
  .col-md-2
    = t params["action"]
    %h3= t @product.type
  .col-md-6
    %h3
      - if @product.product_item?
        = link_to @product.product.name , product_url(@product.product)
      = @product.name
    %small
      = @product.online ? t(:online) : t(:not_online)
  .col-md-4
    %h2= t(:preview)
  
