.row
  %h3= products.length.to_s + " " + t(:products)
  %table.table.table-striped.table-bordered.table-condensed
    %tbody
      - products.in_groups_of(3).each do |array|
        %tr{:class => "line-#{cycle("1","2")}"}
          -array.each do |product|
            -next unless product
            %td= image_tag product.main_picture.url(:thumb)
            %td
              = link_to office.product_path(product), :title => t(:show) , :class => product.online && "online" do
                = product.full_name
